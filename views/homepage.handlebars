<!-- Jumbotron equivelant/w search -->
<div class="ui massive message">
    <div class="ui container">
        <h1 class="ui huge header">Hello, world!</h1>
        <p>
            This is a template for a simple marketing or informational website. It
            includes a large callout called a jumbotron and three supporting
            pieces of content. Use it as a starting point to create something more
            unique.
        </p>

        <div class="ui category search searchEl">
            <div class="ui icon input">
                <input class="prompt" type="text" placeholder="Search...">
                <i class="search icon"></i>
            </div>
            <div class="results">
                <!-- Results displayed here? -->
            </div>
        </div>
    </div>
</div>
<div class="ui container">
    {{#if reviews.length}}
    <div class="row">
        <div class="column">

            <h3>All Reviews </h3>
            <div class="ui cards">
                {{#each reviews as |review|}}

                <div class="card">
                    <div class="content">
                        <div class="ui header">
                            <h3><a href="/reviews/{{review.id}}">{{review.title}}</a></h3>

                            <div class="meta">
                                <h5>Review of <a
                                        href="/restaurants/{{review.restaurant.id}}">{{review.restaurant.name}},
                                        {{review.restaurant.location}}</a></h5>
                            </div>
                        </div>
                        <div class="ui star rating" data-rating="{{review.rating}}" data-max-rating="5"></div>

                        <div class="description">
                            {{review.review_content}}
                        </div>
                    </div>
                    <div class="extra content">
                        posted by {{user.name}} on {{format_date date_created}}
                    </div>
                    <a href="/reviews/{{review.id}}">
                        <div class="ui bottom attached button">
                            <i class="add icon"></i>
                            Add Comment
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/if}}
</div>


<script src="/js/script.js"></script>